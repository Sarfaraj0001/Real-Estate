@using ODHDEVELOPERS.Models;
@{
    ViewBag.Title = "leave_type";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    UsersContext db = new UsersContext();
    var list = db.Ranktabs.ToList();
}


 <div class="page-content">
 <div class="container">
    
<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Leave Type</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                    </div>
<form method="get" action="../HR/leave_type">

    <div class="row" >
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls" >


     <div class="row-form">
                                        
                                        <div class="col-md-9">
                                            

                                             <div class="input-group">
                                            <span class="input-group-addon"><label class="width" >Designation</label></span>


                                                 <select id="Select1" class="form-control" name="name">
                                                     <option value="">Select</option>
                                                     @foreach(var item in list)
                                                     {
                                                     <option value="@item.RankName">@item.RankName</option>
                                                     }
                                                     
                                                 </select>
                                                </div>

                                        </div>
                                    </div>
    
    <div class="row-form">
                              
                                        <div class="col-md-9">
                                             <div class="input-group">
                                            <span class="input-group-addon"><label class="width" > No Of Leaves</label></span>
                                                 <input type="text" id="Introducer" required name="leavetype"  class="form-control">
                                                </div>

                                        </div>
                                    </div>
    <div class="widget-info widget-from">                       
   <button name="submitbtn" type="submit" class="btn btn-primary">Submit</button>                            
   </div>
                                    </div>
                                </div>
</form>
</div>
     </div>