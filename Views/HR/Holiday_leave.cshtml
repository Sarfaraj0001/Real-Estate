@using ODHDEVELOPERS.Models;
@model IEnumerable<ODHDEVELOPERS.Models.holidayleavetab>
@{
    ViewBag.Title = "Holiday_leave";
    Layout = "~/Views/Shared/_HRLayout.cshtml";
    UsersContext db = new UsersContext();
    var id = 1;
    var list = db.holidayleavetabs.ToList();
}

<script>
    function hlleave(dd) {
        debugger;
        var id = dd;
        var status = $("#status_" + dd).val();
        if (status == 1) {
            status = 0;
        }
        else {
            status = 1;
        }
        var Url = '@Url.Action("blacklist" , "HR")';
        $.get(Url, { status: status, id: id }, function data(d) {
            debugger;
            window.location.href = "/HR/Holiday_leave";
        });
        }
</script>
  <div class="page-content">

 <div class="container">
<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Holiday Leave</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                      

</div>
<form method="post" action="../HR/Holiday_leave">
<div class="input-group">
  <span class="input-group-addon">
  <label class="width">Select Date</label></span>
  <input type="date" class="form-control" name="ldate" id="ldate"><span class="input-group-addon"><label class="width" style="width:15px;"><span class="fa fa-calender-alt"></span></label></span> 
</div>
    <div class="page-toolbar-block pull-right">
                                   <div class="widget-info widget-from">

                                       <button value="Search" type="submit" name="command" class="btn btn-primary">Submit</button>

                                   </div>
                               </div>
    <div>
    
        @if(Model!=null)
        {
        if(list.Count()!=0)
        {
        <table style="margin-left:1%; margin-right:1px; width:100%; margin-bottom:30px;">

    <thead style="border:1px solid #1a0404;">
               <tr>
                   <th>Srno.</th>
                   <th>Leave Date</th>
                   <th>Date</th>
                   <th>Status</th>
                   <th>Action</th>
              </tr>
           </thead>
    <tbody>
        @foreach (var item in Model)
        {
       
            <tr>
                <td>@item.id</td>
                <td>@item.ldate</td>
                <td>@item.cdate</td>
              @*  <td>@item.status</td>*@
                @if (item.status == 0)
                {
                    <td style="color:red;">Active</td>
                }
                else
                {
                    <td style="color:green">Inactive</td>
                }
                  <input type="hidden" id="status_@item.id" value="@item.status"/>
                @if (item.status == 0)
                {
                 
            
                    <td><input type="button" value="Unblock" class="btn btn-danger" onclick="hlleave(this.id)" id="@item.id" /></td>
                }
                else
                {
                    <td><input type="button" value="Block" class="btn btn-danger" onclick="hlleave(this.id)"  id="@item.id" /></td>
                }
            </tr>
        }
    </tbody>
 </table>
     }
        }
</div>
</form>
</div>
      </div>
