@model IEnumerable<ODHDEVELOPERS.Models.Logindetail>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "HRLoginDetails";
    var a = 0;
}

 <link rel="stylesheet" href="~/Content/jquery-ui.css" />
<script type="text/javascript">
    $(document).ready(function () {
        $("#iid").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Admin/AutoCompleteHRId",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.HRName, value: item.HRId };
                        }))

                    }
                })
            },
            messages: {
                noResults: "", results: ""
            }
        });
    })
</script>

<script src="~/Scripts/print.js" type="text/javascript"></script>
<div class="page-content">
         
                <div class="container" id="divid1">
                    <div class="page-toolbar" id="2">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">HR Login-Detail</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            
                        </div>           
                     
                    </div>
 
  @using (@Html.BeginForm()){
                   <div class="row" id="hide">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" >
                               
                                <div class="block-content controls" >
                                     <div class="row-form">
           <div class="input-group" style="margin-left:1%;margin-right:1%;">
                        <span class="input-group-addon">Enter HR ID or Name</span>
                    <input type="text" id="iid" class="form-control" required name="iid">
                         
                </div>   </div>
                   <div class="row-form" style="width:100%">
      <div class="col-md-9">
          <button id="submit" value="Search" class="btn btn-primary pull-right" type="submit" >View</button>
     </div>
              </div>
        </div>
        </div>
                             </div>
        </div>
                    }
                  
                   
         <div id="1">
<table border="1" style="margin-left:1%; margin-right:1px; width:98%;">
    @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr style="text-align:center;">
                                <th  colspan="5"><b>HR Login-Detail</b></th>
                            
                            </tr>
         
    <tr>
        <th style="width:10%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:30%;text-align:center;">
           <label id="cc"><b>HR Id</b></label>
            </th>
      <th style="width:30%;text-align:center;">
           <label id="pp"><b>Password</b></label>
            </th>
        <th style="width:30%;text-align:center;">
           <label id="intime"><b>Login Time</b></label>
            </th>
         <th style="width:30%;text-align:center;">
           <label id="dd"><b>Logout Time</b></label>
            </th>
        
 
      
    </tr>
    }
                        a = a + 1;


    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.userid)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        
      <td>
            
            @Convert.ToDateTime(item.intime).ToString("dd/MM/yyy:HH:mm:ss")
        </td>
         <td>
            
            @Convert.ToDateTime(item.outtime).ToString("dd/MM/yyy:HH:mm:ss")
        </td>
        
     
       
             
    </tr>
                   
    }

    }
    
    
   
</table>

              @if (a > 0)
              {
                             <a href="@Url.Action("PrintHRLoginDetails")" target="_blank">Get Report In PDF</a>
              }
              </div> 
                    </div>
    </div>