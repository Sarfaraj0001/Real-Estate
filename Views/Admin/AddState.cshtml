                                                 <option>UttaraKhand </option>
                                                  <option>West Bengal </option>
                                        </select></div>
                                    </div>
                                         </div>
                <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Enter City</label> </span>  
        <input type="text"  class="form-control"  name="City" id="City" required/></div>
                                   
   </div>
                        
         </div>
         
                <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Add</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon; margin-left:15px;"><b> @ViewBag.msg</b></p>
     }
                                </div>
                                @if (Convert.ToInt32(ViewData["count"])>0)
                                {
                            <table border="1" style="margin-left:1%; margin-right:1px; margin-bottom:60px; width:98%;">
    @using (Html.BeginForm())
                {
                    foreach (var item in Model)
                    {
                        if (a == 0)
                        {
                            <tr style="text-align:center;"><th ></th>
                                <th  style="text-align:center;"><b>All State-City List</b></th>
                                <th style="text-align:center;"><b>@DateTime.Now.ToString("dd/MM/yyyy")</b></th>
                            </tr>
    <tr>
        <th style="width:10%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:40%;text-align:center;">
           <label id="newid"><b> State</b></label>
            </th>
        <th style="width:40%;text-align:center;">
           <label id="spilid"><b>City</b></label>
        </th>
      
    </tr>
    }
                        a = a + 1;


    <tr style="text-align:left;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.state)
        </td>

           <td>
            @Html.DisplayFor(modelItem => item.city)
        </td>
        
             
    </tr>
                   
    }

    }
    
    
   
</table>
                                }
