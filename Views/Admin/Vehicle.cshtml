@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var br = db.CompanyInfos.Single(b => b.AdminId == User.Identity.Name);
    var logo = string.Empty;
    var companyname = string.Empty;
    var incometype = string.Empty;
    var mr = db.Members.Single(m => m.Id == 1);
 

 
    logo = br.CompanyLogo;
    companyname = br.CompanyName;
    incometype = br.IncomeType;


    ViewBag.Title = "Vehicle";
  
}

<div class="page-content">

    <div class="container" style="width: 775px; padding-left: 0px; padding-right: 0px;">

        <div class="page-toolbar" style="width: 770px;">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title"></div>


                <h4><b>Welcome, @br.CompanyName</b></h4>
            </div>
            <div style="margin-top: 0px; float: right; margin-right: 10px;">
            </div>

        </div>

        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-plus"></i>
                <h3>Extra</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">

                <div class="shortcuts">
                    <a href="/Admin/AgentVehicleRequest" class="shortcut">
                        <img alt="" src="~/Images/icon/26.png" />
                        <span class="shortcut-label">Vehicle Request</span>
                    </a>

                    <a href="/Admin/AgentVehicleRequestHistory" class="shortcut">
                        <img alt="" src="~/Images/icon/32.png" />
                        <span class="shortcut-label">Agent Vehicle Request History</span>
                    </a>

                     <a href="/Admin/ReceptionistList" class="shortcut">
                        <img alt="" src="~/Images/icon/32.png" />
                        <span class="shortcut-label">Receptionist List</span>
                    </a>

                       <a href="/Admin/SendCredential" class="shortcut">
                      <img src="~/Photo/credentials.png"  width="60%" />
                        <span class="shortcut-label">Send Credentials</span>
                    </a>

                </div>
                <!-- /shortcuts -->

            </div>
            <!-- /widget-content -->

        </div>

    </div>

</div>