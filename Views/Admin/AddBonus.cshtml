
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AddBonus";
}
<link rel="stylesheet" href="~/Content/jquery-ui.css" />

<script type="text/javascript" src="~/Scripts/autosearch.js"></script> 
<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Add Bonus</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            
                        </div>           
                        
                    </div> 

                    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               <div class="block-content controls">  

                    
                      
                        
     @using (Html.BeginForm()) {
            
                   <div class="row-form">  
                                   
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Enter @mr.agentname Id or Name</label> </span>  
        <input type="text" class="form-control"  name="agentcode" id="newagentid" required/></div>
                                   
   </div>
                        
         </div>
         
                
         
          <div class="row-form">  
                                       
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Select Month</label> </span>  
        <input type="month" class="form-control"  name="formonth" id="formonth" required/></div>
                                   
   </div>
                        
         </div>
         
                <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Enter Type</label> </span>  
        <input type="text" class="form-control"  name="type" id="type" required/></div>
                                   
   </div>
                        
         </div>
         
         <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Enter Bonus Amount</label> </span>  
        <input type="number" step="any" class="form-control"  name="bonusamount" id="bonusamount" required/></div>
                                   
   </div>
                        
         </div>
                 <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Add</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
     }
                                </div>
                                
                            
                                         
                                    </div>
                            </div>
                                        
                   </div> </div> </div>