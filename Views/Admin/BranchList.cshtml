@model IEnumerable<ODHDEVELOPERS.Models.Branchlist>
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BranchList";
    var a = 0;
}
<div class="page-content">
    
                <div class="container" id="divid">
                  
<div class="page-toolbar" >
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">@mr.branchname List</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                               <div class="page-toolbar-block pull-right">
                           
                        </div>    
                        
                       
      
<table border="1" style="margin-left:1%; margin-right:1%; margin-bottom:30px; width:95%;">
   
    @foreach (var item in Model)
    {
        if (a == 0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="BranchCode"><b>@mr.branchname Code</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="BranchCode1"><b>@mr.branchname Password</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="BranchName"><b>@mr.branchname Name</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="BranchDistrict"><b>District</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
            <label id="branchaddress" ><b>Address</b></label>
        </th>
            
       
       <th style="width:10%;text-align:center;">
           <label id="mobile"><b>Mobile</b></label>
        </th>
    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BranchCode)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.password)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.BranchName)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.BranchDistrict)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.branchaddress)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.mobile)
        </td>
        
    </tr>
    } 

</table>
    @if (a > 0)
    {
          <a href="@Url.Action("PrintBranchList")" target="_blank">Get Report In PDF</a>
    }
                    </div> 



      
                    </div>


    </div>

