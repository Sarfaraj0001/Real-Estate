@model ODHDEVELOPERS.Models.PhaseTab
@using ODHDEVELOPERS.Models;
@{
    UsersContext db=new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreatePhase";
    
    //for accessing all cityname
    var allplan = db.Plans.Where(d => d.status == 1).ToList();
   
}

<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Create Phase</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
            </div>

        </div>

        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">


                        @using (Html.BeginForm())
                        {
            
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Enter @mr.planname Name</label>
                                        </span>

                                        <select class="form-control" name="projectid" id="projectid" required>
                                            @foreach (var i in allplan)
                                            {
                                                <option value="@i.Plancode">@i.Planname</option>
                                            }
                                        </select>
                                    </div>
                                </div>

                            </div>
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Enter Phase Name</label>
                                        </span>
                                        <input type="text" class="form-control" name="Phase" id="Phase" required />
                                    </div>

                                </div>

                            </div>
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Create Phase</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                        }
                    </div>

                </div>
            </div>

        </div>
    </div>
</div>