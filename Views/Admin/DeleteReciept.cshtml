           <label id="action"><b>Action</b></label>
            </th>
        
 
      
    </tr>
                    }
                        a = a + 1;
         <tr style="text-align:center;">
        
        <td>
            @Html.DisplayFor(modelItem => item.installmentno)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.newbondid)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.amount)
        </td>
             <td>
            @Html.DisplayFor(modelItem => item.planname)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.receiptno)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.year)
        </td>
             <td>
            @Html.DisplayFor(modelItem => item.mode)
        </td>
        
        <td>
            @Convert.ToDateTime(item.paymentdate).ToString("dd/MM/yyyy")
        </td>
        
        <td>
            @Convert.ToDateTime(item.expirydate).ToString("dd/MM/yyyy")
        </td>
              <td>
            @Html.DisplayFor(modelItem => item.branch)
        </td>
       
        <td>
            @Html.ActionLink("Cancel", "DeleteReciept", new { newbondid = item.newbondid, receiptno = item.receiptno }, new { onclick = "return confirm('Are you sure to Cancel this Receipt?');" })
        </td>
        
    </tr>
    } 
                   
  
   
</table> 
  

<h4>@ViewBag.msg</h4>
