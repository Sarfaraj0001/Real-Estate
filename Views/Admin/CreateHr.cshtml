@model ODHDEVELOPERS.Models.HRTab
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreateHr";
}

<link rel="stylesheet" href="~/Content/jquery-ui.css" />
<script type="text/javascript" src="~/Scripts/autosearch.js"></script> 

<div class="page-content">

                <div class="container">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Create HR</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            
                        </div>           
                        
                    </div>
  <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               
                                <div class="block-content controls">

                                   
                                    @using (Html.BeginForm())
                                     {
    
   
                                      @*<div class="row-form">
                                    <div class="col-md-9">
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">@mr.branchname Code </label></span>  *@
        <input type="hidden" class="form-control"  name="BranchCode" id="BranchCode" value="Admin">

                             @*   </div>
                                        </div>
                                         </div>*@
                                    


                                     <div class="row-form">
                                        
                                        <div class="col-md-9">
                                           
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">HR Name</label></span>  
                                            <input type="text" class="form-control"  name="HRName" id="oname" required></div>
                                  </div>
                                          </div>

                                     <div class="row-form">
                                        
                                        <div class="col-md-9">
                                          
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">HR Id </label></span>  
                                            <input type="text" class="form-control"   name="HRId" id="oid" required></div>
                                    </div>
                                          </div>

                                    <div class="row-form">
                                        
                                        <div class="col-md-9">
                                           
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">Mobile No </label></span>  
                                            <input type="tel" class="form-control" pattern="[789][0-9]{9}" title="Mobile no is not correct format"  maxlength="10" name="Mobile" id="omob" required></div>
                                  </div>
                                         </div>


                                    <div class="row-form">
                                        
                                        <div class="col-md-9">
                                           
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">Email Id </label></span>  
                                            <input type="email" class="form-control" title="EmailId not in correct format" name="emailid" required></div>
                                    </div>
                                         </div>


                                    <div class="row-form">
                                        
                                        <div class="col-md-9">
                                           
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">Address</label> </span>  
                                            <textarea class="form-control"   name="Address" id="oadd" required></textarea></div>
                                    </div>
                                         </div>
                                    
                                   
                                  
                                         <div class="row-form">
                                        
                                        <div class="col-md-9">
                                            
                                            <div class="input-group">
       <span class="input-group-addon"><label class="width">Date of Joining </label></span>  
                                            <input type="text" class="form-control datepicker" name="date" id="date" required></div>
                                   </div>
                                         </div>
                                        <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Create HR</button>   
                                </div>
                                             </div>
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
                                     }
                        </div>
                                   
                                                                      
                                                            
                                    
                                    
                                </div>
                                
                            </div>
                            </div>
                          </div>    
                     
                    </div>           
                        
                  
  <script type="text/javascript">
    $(document).ready(function () {
        $('#submit').click(function () {
             @Html.ValidationSummary( true)
        });
    });
 </script>
