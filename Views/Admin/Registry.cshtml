@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    ViewBag.Title = "Registry";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    var br = db.CompanyInfos.Single(b => b.AdminId == User.Identity.Name);
    var logo = string.Empty;
    var companyname = string.Empty;
    var incometype = string.Empty;
    var mr = db.Members.Single(m => m.Id == 1);
    var r = db.CompanyInfos.Single(ci => ci.AdminId == User.Identity.Name);


    logo = r.CompanyLogo;
    companyname = r.CompanyName;
    incometype = r.IncomeType;
}

<div class="page-content">

    <div class="container" style="width: 775px; padding-left: 0px; padding-right: 0px;">

        <div class="page-toolbar" style="width: 770px;">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title"></div>


                <h4><b>Welcome, @br.CompanyName</b></h4>
            </div>
            <div style="margin-top: 0px; float: right; margin-right: 10px;">
            </div>

        </div>

        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-plus"></i>
                <h3>Registry</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">

                <div class="shortcuts">
                    <a href="~/Admin/PlotRegistry" class="shortcut">
                        <img alt="" src="~/Images/icon/home_registration.png" />
                        <span class="shortcut-label">Plot Registry</span>
                    </a>

                    <a href="~/Admin/PreSurrender" class="shortcut">
                        <img alt="" src="~/Images/icon/32.png" />
                        <span class="shortcut-label">Pre Surrender</span>
                    </a>
                    @*<a href="~/Admin/CreateHr" class="shortcut">
                        <img alt="" src="~/Images/icon/16.png" />
                        <span class="shortcut-label">Plot No. Free</span>
                    </a>*@
                </div>
                <!-- /shortcuts -->

            </div>
            <!-- /widget-content -->

        </div>

    </div>

</div>
