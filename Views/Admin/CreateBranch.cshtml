@model ODHDEVELOPERS.Models.Branchtab
@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreateBranch";
}

<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Create @mr.branchname</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                           
                        </div>           
                        
                    </div> 



                    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               <div class="block-content controls">  

                    
                      
                        
     @using (Html.BeginForm()) {
    

                                    
                   <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Name </label></span>  
        <input type="text" class="form-control"  name="BranchName" id="bname" required></div>
                                   
   </div>
</div> 
         
          <div class="row-form">
                    <div class="col-md-9">
      <div class="input-group">
       <span class="input-group-addon"><label class="width">Prefix</label></span>
        <input type="text" class="form-control"  name="prefix" id="prefix"  required/>
         
        </div>
      </div>
               </div>
         
          <div class="row-form">
                    <div class="col-md-9">
      <div class="input-group">
       <span class="input-group-addon"><label class="width">Code</label></span>
        <input type="text" class="form-control" style="text-transform:uppercase"  name="BranchCode" id="BranchCode"  required/>
         
        </div>
      </div>
               </div>
         
         
         <div class="row-form">
             
      <div class="col-md-9">
          <div class="input-group">
       <span class="input-group-addon"><label class="width">Address</label></span>
          <textarea class="form-control" name="branchaddress" id="badd" required></textarea></div>
      </div>
                           </div>
         
            
                 <div class="row-form">
                    
     <div class="col-md-9">
          <div class="input-group">
       <span class="input-group-addon"><label class="width">District</label></span>
         <input type="text" class="form-control" name="BranchDistrict" id="bdistrict" required></div>
   </div>
                     </div>
                 
                 <div class="row-form">
                    
       <div class="col-md-9">
            <div class="input-group">
       <span class="input-group-addon"><label class="width">Mobile No</label></span>
           <input type="tel" class="form-control" maxlength="10" pattern="[789][0-9]{9}" title="Mobile no is not correct format" name="mobile" id="mobile" required></div>
        </div>
                                 </div>
                 
                 <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
         <button  type="submit" class="btn btn-primary pull-right"> Create</button>   
                                </div>
                                             </div>
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
     }
                                </div>
                                
                            
                                         
                                    </div>
                            </div>
                                        
                   </div> </div> </div>
                   
