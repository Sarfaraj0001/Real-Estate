@using ODHDEVELOPERS.Models;
@{
    ViewBag.Title = "Achievers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    UsersContext db = new UsersContext();
    var countachivers = db.Acheviers.ToList().Count();
    int a = 1;
}
<script>
    function readURL3(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#sasa')
                    .attr('src', e.target.result)
                    .width(200)
                    .height(200);
            };

            reader.readAsDataURL(input.files[0]);

        }
    }
    $(document).ready(function () {
        $("#sasa").click(function () {
            $("#pic").click();
        });
    });
</script>

<style>
    #myTable th, td {
        text-align: left;
        padding: 8px;
    }

    #myTable {
        border-collapse: collapse;
        width: 100%;
    }

        #myTable th, td {
            font-size: 9pt;
        }

    #myTable {
        padding: 5pt;
    }
</style>
<script>
    function showmodel(chechid) {
        debugger;
        var _newid = chechid;
        event.preventDefault();
        if (confirm('Are you sure update achiver?')) {
            $.ajax({
                url: "/admin/getachiverlist/", type: "get", data: { newid: _newid },
                success: function (d) {
                    for(var i=0; i<d.length; i++)
                    {
                        $("#imgachiver").attr("src", d[i].Slide1.replace('~',''));
                        $("#Slide2").val(d[i].Slide2);
                        $("#Slide3").val(d[i].Slide3);
                        $("#Slide4").val(d[i].Slide4);
                        $("#newid").val(d[i].Id);
                    }
                }
            });
        }
    setTimeout(function () {
        debugger;
        $('[data-toggle="mypopover"]').attr("data-placement", "left").popover({ "trigger": "hover" });
    }, 2000);
    }

    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#imgachiver')
                    .attr('src', e.target.result)
                    .width(102)
                    .height(80);
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>
@if (TempData["msg"] != null)
{
    <script>
        alert('@TempData["msg"]');
    </script> 
}

<div class="page-content">

                <div class="container">

<div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Add Achievers</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                           
                        </div>           
                        
                    </div> 



                    <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                               <div class="block-content controls">  

                    
                      
                        
     

                                    
                   <div class="row-form">  
      @using (Html.BeginForm("Achievers", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
                          
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Achiever Image </label></span>  
       <img style="height: 150px; width: 150px;" id="sasa" src="~/Content/Admin/img/demo.png" />
       <input type="file" name="slide1"  class="form-control"  onchange="readURL3(this)" id="pic" accept="image/*"/>  
                                   
   </div>
</div> 
         
          <div class="row-form">
         <div class="col-md-9">
      <div class="input-group">
       <h6 style="color: red; font-weight: 800;">Size of file should be between 500kb–2084 kb </h6>
       <h6 style="color: red; font-weight: 800">Please Upload  1080 pixels Width 1024pix and Heigh 720pix </h6>
                               
        </div>
      </div>
               </div>
         
          <div class="row-form">
                    <div class="col-md-9">
      <div class="input-group">
       <span class="input-group-addon"><label class="width">Achiever Name :</label></span>
           <input type="text" class="form-control" name="Slide2" placeholder="Achievers Name" />
        </div>
      </div>
               </div>
         
            <div class="row-form">
                    <div class="col-md-9">
      <div class="input-group">
       <span class="input-group-addon"><label class="width">Achieve Prize :</label></span>
           <input type="text" class="form-control" name="Slide3" placeholder="Achieve Prize" />
        </div>
      </div>
               </div>
         <div class="row-form">
             
      <div class="col-md-9">
          <div class="input-group">
       <span class="input-group-addon"><label class="width"> Mobile :</label></span>
         <input type="text" name="Slide4" class="form-control" placeholder="Mobile" /></div>
      </div>
        </div>
          
           <div class="row-form">
             
      <div class="col-md-9">
          <div class="input-group">

          <button type="submit" name="Upload" value="Upload" class="btn btn-primary btn-width" style="margin-top:38%;margin-left:56%">Upload</button>
      </div>
        </div>
               </div>
                 
         
     <p style="color:maroon;"><b> @ViewBag.msg</b></p>
     }
                                </div>
                                <br />
                        @if (countachivers != 0)
                        {
                                   <table  class="table-responsive table-bordered table" id="myTable" style="width:98%;">
                                <thead class="bordered-blueberry">
                                  
                                    <tr>
                                        <th>Sr No.</th>
                                        <th>Image</th>
                                        <th>Achevier Name</th>
                                        <th>Achieve Prize</th>
                                         <th>Mobile</th>
                                        <th>Upload Date</th>
                                        <th>Action</th>
                                         <th>Status</th>
                                        <th>Edit</th>
                                    </tr>
                                </thead>
                                <tbody>
                          
                                    @foreach (var item in db.Acheviers.Where(x => x.Id >= 1).ToList())
                                    {
                                        a = a + 1;
                                    <tr>
                                            <td>@a</td>
                                            <td><img src="@Url.Content(item.Slide1)" style="height:100px;width:100px" class="img-responsive"/></td>
                                            <td>@item.Slide2</td>
                                        <td>@item.Slide3</td>
                                        <td>@item.Slide4</td>
                                            <td>@item.Cdate</td>
                                            <td>
                                              
                                                    @if (item.status == 1)
                                                    {
                                                        <span style="color:red"><a href="@Url.Action("statuschange2", "Admin", new { s = item.Id, m = item.status })" class="btn btn-primary"> Block</a></span>
                                                    }
                                                    else
                                                    {
                                                        <span style="color:green"><a href="@Url.Action("statuschange2", "Admin", new { s = item.Id, m = item.status })" class="btn btn-primary"> Active</a></span>
                                                    }
                                               
                                            </td>
                                        @if (item.status != 0)
                                        {
                                            <td style="color:green;">Active</td>
                                        }
                                        else
                                        {
                                            <td style="color:red;">Inactive</td>
                                        }
                                        <td>
                                           
                                            <a href="#myModal" role="button" class="btn" data-toggle="modal" id="@item.Id" onclick="showmodel(this.id)">Update</a></td>
                                        </tr> 
                                 
                                    }
                                 
                                </tbody>
                            </table>
                        }

                            
                                         
                                    </div>
                            </div>
                                        
                   </div> </div> </div>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header text-center" style="background-color:#b2b0b0;width:111%;">
                <h4 class="modal-title w-100 font-weight-bold" style="color:#123897;">Update Achiver</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body mx-3" style="width:111%;">
                <div class="row"style="margin-left:-8px;">
                   @using (Html.BeginForm("Achievers", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
            {
             <input type="hidden" id="newid" name="newid"/>
                        <div style="overflow-x: scroll">
                            <table  class="table-responsive table-bordered table">
                                <tr>
                                    <td>Achiver Image</td>
                                    <td><img src="" style="height:80px;width:102px;" id="imgachiver"/>
                                        <input type="file" onchange="readURL(this)" name="Slide1" class="form-control">
                                    </td>
                                </tr>
                                <tr>
                                    <td>Achevier Name</td>
                                    <td><input name="Slide2" id="Slide2" type="text" class="form-control"></td>
                                </tr>
                                <tr>
                                    <td>Designation</td>
                                    <td><input name="Slide3" id="Slide3" type="text" class="form-control"></td>
                                </tr>
                                <tr>
                                    <td>Mobile</td>
                                    <td><input name="Slide4" id="Slide4" type="text" class="form-control" maxlength="10"></td>
                                </tr>
                                 <tr>
                                    <td></td>
                                    <td><button type="submit" class="btn btn-space btn-primary" name="command" value="Update">Update</button></td>
                                </tr>
                                </table>
                            </div>
         }
                </div>
            </div>
        </div>
    </div>
</div>
