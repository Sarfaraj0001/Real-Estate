@{
    ViewBag.Title = "Addbank";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Add Bank</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
                <div class="widget-info widget-from">
                    <div id="reportrange" class="dtrange">
                        <span></span><b class="caret"></b>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">




                        @using (Html.BeginForm())
                        {
            
                            <div class="row-form">
                                  <input type="hidden" class="form-control" value="1" name="status"  />

                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <label class="width">Bank name: </label>
                                        </span>
                                        <input type="text" class="form-control" id="bankname" name="bankname" required />
                                            
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">*&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                                            <label class="width">Account Type: </label>
                                        </span>
                                        <select class="form-control" id="accountype" name="accountype" required>
                                            <option selected>Select </option>
                                             <option value="Saving Account">Saving Account </option>
                                            <option value="Current Account">Current Account</option>
                                           
                                        </select>
                                    </div>
                                </div>
                            </div>
                          
                            <div class="row-form">


                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width"> Account No: </label>
                                        </span>
                                        <input type="text"class="form-control" id="accountno" name="accountno" required />
                                           
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Bank Branch: </label>
                                        </span>
                                       <input type="text" class="form-control" id="branchname" name="branchname" required>
                                           
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row-form">


                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">  IFSC Code: </label>
                                        </span>
                                      <input type="text" class="form-control" id="ifsccode" name="ifsccode" required>
                                           
                                    </div>
                                </div>
                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Authorised Sigh1: </label>
                                        </span>
                                      <input type="text" class="form-control" id="Authorisedsignatory1" name="Authorisedsignatory1" required />
                                           
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row-form">
                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Authorised Signatory2: </label>
                                        </span>
                                      <input type="text" class="form-control" id="Authorisedsignatory2" name="Authorisedsignatory2" />
                                           
                                    </div>
                                </div>

                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Contact No 1: </label>
                                        </span>
                                        <input type="text" class="form-control" id="contact1" name="contact1" required />
                                            
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row-form">


                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Contact No 2: </label>
                                        </span>
                                       <input type="text" class="form-control" id="contact2" name="contact2"  />
                                           
                                    </div>
                                </div>

                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width"> branch Address: </label>
                                        </span>
                                      <input type="text" class="form-control" id="branchaddress" name="branchaddress" required />
                                           
                                    </div>
                                </div>
                            </div>

                            
                            <div class="row-form">


                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Account Open Date: </label>
                                        </span>
                                        <input type="date" class="form-control date" id="acopendate" name="acopendate" required />
                                            
                                    </div>
                                </div>

                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width"> Pan No 1: </label>
                                        </span>
                                        <input type="text" class="form-control" id="panno1" name="panno1" required>
                                           
                                    </div>
                                </div>
                            </div>
                            
                            <div class="row-form">


                                <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Pan No 2:</label>
                                        </span>
                                        <input type="text" class="form-control" id="panno2" name="panno2"  />
                                           
                                    </div>
                                </div>

                                 <div class="col-md-6">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width"> Company Name: </label>
                                        </span>
                                        <input type="text" class="form-control" id="companyname" name="companyname" required />
                                            
                                    </div>
                                </div>
                            </div>
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Add Bank</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                        }
                    </div>



                </div>
            </div>

        </div>
    </div>
</div>
