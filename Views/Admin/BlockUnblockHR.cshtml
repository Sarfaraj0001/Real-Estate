@model IEnumerable<ODHDEVELOPERS.Models.HRTab>
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "BlockUnblockHR";
    var a = 0;
}
<script src="~/Scripts/print.js" type="text/javascript"></script>
<div class="page-content">
      <div>
                    <input type="button" style="margin-left:10px;margin-top:10px;margin-bottom:10px;" name="btnprint" value="Print" onclick="PrintMe('divid')"/></div>
                <div class="container" id="divid">
                  
<div class="page-toolbar" >
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Block-UnBlock HR</div>
                            <div class="page-toolbar-subtitle"> </div>
                        </div>
                               <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                <div >                                            
                                <label>@Convert.ToDateTime(DateTime.Now.Date).ToString("dd/MM/yyyy")</label>
                                </div>                            
                            </div>
                        </div>    
                        
                    </div> 


                   
      
<table border="1" style="margin-left:1%; margin-right:1%; width:98%;">
   
    @foreach(var item in Model){
        if(a==0)
        {
  <tr>
        <th style="width:5%;text-align:center;">
           <label id="sn"><b>S.N.</b></label>
            </th>
        <th style="width:10%;text-align:center;">
           <label id="HRId"><b>HR Id</b></label>
            </th>
        
        <th style="width:10%;text-align:center;">
           <label id="HRName"><b>HR Name</b></label>
        </th>
            
       
            
        <th style="width:10%;text-align:center;">
            <label id="HRMobile" ><b>HR Mobile</b></label>
        </th>
            
        <th style="width:10%;text-align:center;">
           <label id="HRAddress"><b>HR Address</b></label>
        </th>
       <th style="width:10%;text-align:center;">
           <label id="HR_Mail"><b>HR Mail</b></label>
        </th>
        <th style="width:10%;text-align:center;">
           <label id="Cdate"><b>Creation date</b></label>
        </th>
       <th style="width:10%;text-align:center;">
           <label id="Action"><b>Action</b></label>
        </th>

    </tr>
        }

        a = a + 1;
    <tr style="text-align:center;">
        <td>
            @a
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.HRId)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.HRName)
        </td>
        
       
       
        <td>
            @Html.DisplayFor(modelItem => item.Mobile)
        </td>
         
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.emailid)
        </td>
         <td>
            @Convert.ToDateTime(item.date).ToString("dd/MM/yyyy")
        </td>
         @if(item.Status==1)
          {
         <td>
                
            @Html.ActionLink("Block", "BlockUnblockHR", new { hrid = item.HRId, status = 1 },new {onclick = "return confirm('Are you sure to Block this HR?');"})
        </td>
        }
        @if(item.Status==0)
        {
        <td>
            @Html.ActionLink("UnBlock", "BlockUnblockHR", new { hrid = item.HRId, status = 0 },new {onclick = "return confirm('Are you sure to Unblock this HR?');"})
        </td>
        }
    </tr>
    } 

</table>
      
                    </div>


    </div>

