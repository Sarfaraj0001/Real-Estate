@model ODHDEVELOPERS.Models.Plan
@using ODHDEVELOPERS.Models;
@{
    UsersContext db=new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);   
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "CreatePlan";
}


<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Create @mr.planname Category</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
            </div>

        </div>

        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">




                        @using (Html.BeginForm())
                        {
            
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Enter @mr.planname Category</label>
                                        </span>
                                        <input type="text" class="form-control" name="Planname" id="Planname" required />
                                    </div>

                                </div>

                            </div>
         
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Enter @mr.planname Shortcut</label>
                                        </span>
                                        <input type="text" class="form-control" name="shortcutname" id="shortcutname" required />
                                    </div>

                                </div>

                            </div>
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Select @mr.planname Type</label>
                                        </span>
                                        <select class="form-control" name="type" id="type" required >
                                            <option value="">Select</option>
                                            <option value="Residential">Residential</option>
                                            <option value="Commercial">Commercial</option>
                                        </select>
                                    </div>

                                </div>

                            </div>
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Create @mr.planname Category</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                        }
                    </div>



                </div>
            </div>

        </div>
    </div>
</div>