@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1);
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "AllowRenewal";
    var dt = db.RPTabs.Single(c => c.Id == 1);
}

<div class="page-content">

                <div class="container">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Permission of Renewal to other @mr.branchname</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                            
                        </div>           
                        
                    </div>

                    @using (Html.BeginForm())
                    {
  <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                                 <div class="block-content controls">

                                      @if(dt.status==0)
         {
         <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Action</label> </span>  
        
       <input type="radio" name="status" class="plantype" value="0" id="active" checked />Deactive  
      <input type="radio" name="status" class="plantype" value="1" id="inactive" />Active
                         </div>                
                                   
   </div>
                        
         </div>
                                          
         
         }
              @if(dt.status==1)
         {
         <div class="row-form">  
                                         
    <div class="col-md-9">
        <div class="input-group">
       <span class="input-group-addon"><label class="width">Action</label> </span>  
        
     <input type="radio" name="status" class="plantype" value="0" id="active1" />Deactive  
     <input type="radio" name="status" class="plantype" value="1" id="inactive1" checked />Active
                         </div>                
                                   
   </div>
                        
         </div>
                  
                  
         }
                                                 
                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
           <button type="submit" class="btn btn-primary" onclick="return confirm('Are you sure to change option? ');">Submit</button>                            
                               
                            </div>
                        </div>
                                <div>@ViewBag.msg</div>   
                                                                      
                                                            
                                    
                                    
                                </div>
                                
                            </div>
                            </div>
                          </div>  
                      
                    }
                     
                    </div>
    </div>