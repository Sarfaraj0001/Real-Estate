@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var br = db.CompanyInfos.Single(b => b.Id == 1);
    var mr = db.Members.Single(m => m.Id == 1);
 
    var plan1 = db.Plans.Single(p1 => p1.Plancode == 1);
    var plan2 = db.Plans.Single(p2 => p2.Plancode == 2);
    var plan3 = db.Plans.Single(p3 => p3.Plancode == 3);
    var plan4 = db.Plans.Single(p4 => p4.Plancode == 4);
    var f1 = db.VFormatTabs.Single(f => f.Id == 1);
    var f2 = db.VFormatTabs.Single(f => f.Id == 2);
    var f3 = db.VFormatTabs.Single(f => f.Id == 3);
    
    Layout = "~/Views/Shared/_AdminLayout.cshtml";   
    ViewBag.Title = "PaymentMenu";
}

<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Welcome @br.CompanyName</div>
                <div class="page-toolbar-subtitle"></div>
            </div>



        </div>

        <div class="widget stacked">

            <div class="widget-header">
                <i class="icon-credit-card"></i>
                <h3>Payment</h3>
            </div>
            <!-- /widget-header -->

            <div class="widget-content">

                <div class="shortcuts">

                   <a href="~/Admin/SpotCommission" class="shortcut">
                        <img alt="" src="~/Images/icon/spotcomm.jpg" />
                        <span class="shortcut-label">Spot Commission</span>
                        <br />
                    </a>
                    <a href="~/Admin/DWSpotCommission" class="shortcut">
                        <img alt="" src="~/Images/icon/spotcomm.jpg" />
                        <span class="shortcut-label">Datewise Spot Commission</span>

                    </a>
                    <a href="~/Admin/PaymentRenewal" class="shortcut">
                        <img alt="" src="~/Images/icon/54.png" />
                        <span class="shortcut-label">EMI Payment</span>
                        <br />
                    </a>
                     <a href="~/Admin/PartPayment" class="shortcut">
                        <img alt="" src="~/Images/icon/54.png" />
                        <span class="shortcut-label">Part Payment</span>
                        <br />
                    </a>
                    <a href="~/Admin/BrokerAdvancePayment" class="shortcut">
                        <img alt="" src="~/Images/icon/advancepay.jpg" />
                        <span class="shortcut-label">@mr.agentname Advance Payment</span>

                    </a>
                </div>
                <!-- /shortcuts -->

            </div>
            <!-- /widget-content -->

        </div>
    </div>

</div>