@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var inout = db.InOutTimes.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Loginouttime";
}

<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Set Log In-Out Time  </div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
            </div>

        </div>

        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">




                        @using (Html.BeginForm())
                        {
            
                            <div class="row-form">


                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Select Login Time </label>
                                        </span>
                                        <input type="time" class="form-control"  name="login" id="login" value="@inout.login" required/>

                                    </div>
                                </div>
                            </div>
         
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Select Logout Time</label>
                                        </span>
                                        <input type="time"  class="form-control"  name="logout" id="logout" value="@inout.logout" required/>
                                    </div>

                                </div>

                            </div>
                            if (inout.status == 0)
                            {
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Action</label>
                                        </span>

                                        <input type="radio" name="status" class="plantype" value="1" id="active" />Active  
      <input type="radio" name="status" class="plantype" value="0" id="inactive" checked />Deactive
                                    </div>

                                </div>

                            </div>
                            }
                            if (inout.status == 1)
                            {
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Action</label>
                                        </span>

                                        <input type="radio" name="status" class="plantype" value="1" id="active1" checked />Active  
     <input type="radio" name="status" class="plantype" value="0" id="inactive1" />Deactive
                                    </div>

                                </div>

                            </div>
         }   
         
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Set</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                        }
                    </div>



                </div>
            </div>

        </div>
    </div>
</div>
