@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    var mr = db.Members.Single(m => m.Id == 1); 
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "ResetBranch";
}




<div class="page-content">

                <div class="container">
                    <div class="page-toolbar">
                        
                        <div class="page-toolbar-block">
                            <div class="page-toolbar-title">Reset Panel-Wise Password</div>
                            <div class="page-toolbar-subtitle"></div>
                        </div>
                        
                        <div class="page-toolbar-block pull-right">
                           
                        </div>           
                        
                    </div>

                    @using (Html.BeginForm())
                    {
  <div class="row" style="width:100%">
                        <div class="col-md-6" style="width:100%">
                            
                            <div class="block" style="width:100%">
                                 <div class="block-content controls">

                                      <div class="row-form">
                                 <div class="col-md-9">
                                        <div class="input-group">
                       <span class="input-group-addon"><label class="width">Select Panel </label></span>  
                                             <select class="form-control" id="type" name="type" required>
                                             <option disabled="disabled">Select</option>
                                                 <option value="Branch">@mr.branchname</option>
                                                 <option>Collection Point</option>
                                                 <option>HR</option>
                                          

                                        </select>
                                               
                                     
                                        </div>
                           
                                        </div>
                                          </div>


                                                                 
                                       <div class="page-toolbar-block pull-right">
                            <div class="widget-info widget-from">
                                                          
           <button type="submit" class="btn btn-primary"><i class="fa fa-cog"></i> Reset Password</button>                            
                               
                            </div>
                        </div>
                                <div>&nbsp;@ViewBag.msg</div>   
                                                                      
                                                            
                                    
                                    
                                </div>
                                
                            </div>
                            </div>
                          </div>    
                    }
                     
                    </div>
    </div>