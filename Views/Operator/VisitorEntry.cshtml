@{
    ViewBag.Title = "VisitorEntry";
    Layout = "~/Views/Shared/_OperatorLayout.cshtml";
}

<link href="~/Content/datepicker/jquery.datepick.css" rel="stylesheet" />
<script src="~/Content/datepicker/jquery.plugin.js"></script>
<script src="~/Content/datepicker/jquery.datepick.js"></script>

<script>
    $(function () {
        $('#date').datepick();
        
    });
</script>

<script type="text/javascript">
    $(document).ready(function () {
        $("#introducer").autocomplete({
            source: function (request, response) {
                $.ajax({
                    url: "/Branch/AutoCompleteAgentId",
                    type: "POST",
                    dataType: "json",
                    data: { term: request.term },
                    success: function (data) {
                        response($.map(data, function (item) {
                            return { label: item.name + '(' + item.NewAgentId + ')', value: item.name + '(' + item.NewAgentId + ')' };


                        }))

                    }
                })
            }
        });


    })
</script>
<div class="page-content">

    <div class="container">

        <div class="page-toolbar">

            <div class="page-toolbar-block">
                <div class="page-toolbar-title">Visitor Entry Form</div>
                <div class="page-toolbar-subtitle"></div>
            </div>

            <div class="page-toolbar-block pull-right">
                <div class="widget-info widget-from">
                    <div id="reportrange" class="dtrange">
                        <span></span><b class="caret"></b>
                    </div>
                </div>
            </div>

        </div>

        <div class="row" style="width: 100%">
            <div class="col-md-6" style="width: 100%">

                <div class="block" style="width: 100%">
                    <div class="block-content controls">




                        @using (Html.BeginForm())
                        {
            
                            <div class="row-form">

                            </div>
         <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Name</label>
                                        </span>
                                        <input type="text"  class="form-control" name="name" id="name" required />
                                    </div>
                                </div>
                            </div>
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Mobile</label>
                                        </span>
                                        <input type="text" class="form-control" name="mobile" id="mobile" autocomplete="on" required />
                                    </div>

                                </div>

                            </div>
          <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Introducer</label>
                                        </span>
                                        <input type="text" class="form-control" name="introducer" id="introducer"  />
                                    </div>
                                </div>
                            </div>
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Introducer Mobile</label>
                                        </span>
                                        <input type="text" class="form-control" name="intromobile" id="intromobile" autocomplete="on"  />
                                    </div>

                                </div>

                            </div>        
                            <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Purpose</label>
                                        </span>
                                        <input type="text" class="form-control" name="purpose" id="purpose" required />
                                    </div>

                                </div>

                            </div>
          <div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Date</label>
                                        </span>
                                        <input type="text" class="form-control"  name="date" id="date"/>
                                    </div>

                                </div>

                            </div>
                            @*<div class="row-form">

                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">In Time</label>
                                        </span>
                                        <input type="time" class="form-control "  name="intime" id="intime"/>
                                    </div>

                                </div>
                            </div>
          <div class="row-form">
                                <div class="col-md-9">
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <label class="width">Out Time</label>
                                        </span>
                                        <input type="time" class="form-control "  name="outtime" id="outtime" />
                                    </div>

                                </div>

                            </div>*@
                            <div class="page-toolbar-block pull-right">
                                <div class="widget-info widget-from">
                                    <button type="submit" class="btn btn-primary pull-right">Submit</button>
                                </div>
                            </div>
         
                            <p style="color: maroon;"><b>@ViewBag.msg</b></p>
                        }
                    </div>



                </div>
            </div>

        </div>
    </div>
</div>
