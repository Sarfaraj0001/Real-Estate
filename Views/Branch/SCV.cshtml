@using ODHDEVELOPERS.Models;
@{
    UsersContext db = new UsersContext();
    ViewBag.Title = "SCV";
    Layout = "~/Views/Shared/_BranchLayout.cshtml";
}

<script type="text/javascript">
    function detail(chkid) {

        var chk = $("#" + chkid).val();
        if (chk == "Cheque") {
            $("#detail").show();
            $("#dd1").hide();
            $("#trdetail").hide();
            $("#cashdetail").hide();
            //$(':input[type="submit"]').prop('disabled', true);
        }
        else if (chk == "DD") {
            $("#dd1").show();
            $("#detail").hide();
            $("#trdetail").hide();
            $("#cashdetail").hide();
            //$(':input[type="submit"]').prop('disabled', true);
        }
        else if (chk == "banktransaction") {
            $("#cashdetail").hide();
            $("#dd1").hide();
            $("#detail").hide();
            $("#trdetail").show();
            //$(':input[type="submit"]').prop('disabled', true);
        }
        else {
            $("#cashdetail").show();
            $("#detail").hide();
            $("#dd1").hide();
            $("#trdetail").hide();
            //$(':input[type="submit"]').prop('disabled', true);
        }

    }
</script>
