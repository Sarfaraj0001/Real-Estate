@model IEnumerable<ODHDEVELOPERS.Models.DailyDepositTab>
    @{
        ViewBag.Title = "DailyClosingReport";
        Layout = "~/Views/Shared/_BranchLayout.cshtml";
        int a = 0;
    }
    <div class="container-fluid mt-4 FormContainer" id="divid">
        <h2 class="text-center mb-4">DateWise Closing List</h2>
        <div class="border p-4 rounded shadow formtag" style="margin-top:25px">
            @using (Html.BeginForm())
            {
                <!-- Project Year -->
                <div class="mb-3">
                    <label for="year" class="form-label formLabel">Start Date:</label>
                    <input type="date" id="" class="form-control formInput" required name="sdate" />
                </div>

                <!-- Project Year -->
                <div class="mb-3">
                    <label for="year" class="form-label formLabel">End Date:</label>
                    <input type="date" id="" class="form-control formInput" required name="edate" />
                </div>

                <!-- Create Button -->
                <div class="text-center d-grid gap-2">
                    <button id="submit" value="Search" class="btn btn-lg formButtom" type="submit">View</button>
                </div>
            }
        </div>
        <table class="bg-white mt-3">
            @foreach (var item in Model)
            {
                Double totalcashexp = item.ReturnCashExp + item.ReturnCashSpot + item.ReturnCashVoucher;
                Double totalchequeexp = item.ReturnChequeExp + item.ReturnCashSpot + item.ReturnChequeVoucher;
                Double totalBankexp = item.ReturnBankExp + item.ReturnBankSpot + item.ReturnBanVoucher;
                if (a == 0)
                {
                    <thead>
                        <tr>
                            <th colspan="5" class="header-row" style="border-radius: 8px 0 0 0; border: none;">DateWise Closing List</th>
                            <th colspan="6" class="header-row" style="border-radius: 0 8px 0 0; border: none;">Dated:@DateTime.Now.Date.ToString("dd/MM/yyyy")</th>
                        </tr>
                        <tr>
                            <th style="width: 5%; text-align: center;"><b>S.N.</b></th>
                            <th style="width: 10%; text-align: center;"><b>Operator Id</b></th>
                            <th style="width: 10%; text-align: center;"><b>Total Bank Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Total Cheque Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Total Cash Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Bank Expense Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Cheque Expense Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Cash Expense Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Total Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Deposited Amount</b></th>
                            <th style="width: 10%; text-align: center;"><b>Remaining Amount</b></th>
                        </tr>

                    </thead>

                }
                a = a + 1;
                <tbody>
                    <tr>
                        <td>@a</td>
                        <td>@Html.DisplayFor(modelItem => item.opid)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalBankamount)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalChequeamount)</td>
                        <td>@Html.DisplayFor(modelItem => item.TotalCashamount)</td>
                        <td>@totalBankexp</td>
                        <td>@totalchequeexp</td>
                        <td>@totalcashexp</td>
                        <td>@Html.DisplayFor(modelItem => item.Depositedamount)</td>
                        <td><a href="" data-target="#@item.Id" role="button" class="btn btn-default btn-primary" data-toggle="modal">@Html.DisplayFor(modelItem => item.total)</a></td>
                        <td>@Html.DisplayFor(modelItem => item.remainingamount) </td>
                    </tr>
                </tbody>
            }
        </table>
    </div>
    @foreach (var ii in Model)
    {
        Double twothousand = ii.twothousand / 2000;
        Double fivehund = ii.fivehundred / 500;
        Double twohund = ii.twohundred / 200;
        Double hund = ii.hundred / 100;
        Double fifty = ii.fifty / 50;
        Double twenty = ii.twenty / 20;
        Double ten = ii.ten / 10;
        Double five = ii.five / 5;
        Double two = ii.two / 2;
        Double one = ii.one / 1;
        <div class="modal fade" id="@ii.Id" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header text-center" style="background-color:#b2b0b0;">
                        <h4 class="modal-title w-100 font-weight-bold" style="color:#123897;">Note Detail</h4>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body mx-3">
                        <div class="row" style="margin-left:10px;">
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">Denomination</label>
                                </div>
                                <div class="col-md-4">
                                    <label>No of Note</label>
                                </div>
                                <div class="col-md-4">
                                    <label>Amount</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">2000:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@twothousand</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.twothousand</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">500:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@fivehund</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.fivehundred</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">200:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@twohund</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.twohundred</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">100:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@hund</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.hundred</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">50:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@fifty</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.fifty</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">20:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@twenty</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.twenty</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">10:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ten</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.ten</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">5:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@five</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.five</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">2:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@two</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.two</label>
                                </div>
                            </div>
                            <div class="col-md-12">
                                <div class="col-md-4">
                                    <label style="color:#123897;">1:</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@one</label>
                                </div>
                                <div class="col-md-4">
                                    <label>@ii.one</label>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }






